<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.geometry.Insets?>
        <?import javafx.scene.control.Button?>
        <?import javafx.scene.control.ComboBox?>
        <?import javafx.scene.control.Label?>
        <?import javafx.scene.control.Separator?>
        <?import javafx.scene.control.TableColumn?>
        <?import javafx.scene.control.TableView?>
        <?import javafx.scene.control.TextField?>
        <?import javafx.scene.effect.DropShadow?>
        <?import javafx.scene.layout.HBox?>
        <?import javafx.scene.layout.StackPane?>
        <?import javafx.scene.layout.VBox?>
        <?import javafx.scene.text.Font?>

<StackPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #2b1b17;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.biblioteca_gruppo_05.Gestione_Libri.LibriController">

    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: transparent;">

            <padding><Insets bottom="30.0" left="40.0" right="40.0" top="30.0" /></padding>

            <children>
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <Button onAction="#handleIndietro" prefHeight="45.0" prefWidth="45.0" style="-fx-background-color: #8d6e63; -fx-text-fill: #fff8e1; -fx-background-radius: 50; -fx-min-width: 45px; -fx-min-height: 45px; -fx-cursor: hand; -fx-font-family: 'Georgia';" text="â†">
                        <font>
                            <Font name="System Bold" size="20.0" />
                        </font>
                        <effect>
                            <DropShadow color="#00000080" height="10.0" radius="4.5" width="10.0" />
                        </effect>
                    </Button>
                    <VBox>
                        <Label text="CATALOGO LIBRI" textFill="#fff8e1">
                            <font>
                                <Font name="Georgia Bold" size="32.0" />
                            </font>
                            <effect>
                                <DropShadow color="#000000" height="5.0" radius="2.0" width="5.0" />
                            </effect>
                        </Label>
                        <Label text="Esplora, cerca e ordina i libri in biblioteca" textFill="#a1887f" />
                    </VBox>
                </HBox>
                <Separator opacity="0.5" prefWidth="200.0" style="-fx-background-color: #8d6e63;" />

                <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #fff8e1; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2); -fx-border-color: #8d6e63; -fx-border-width: 1; -fx-border-radius: 10;">

                    <Label text="Cerca per:" textFill="#5d4037"><font><Font name="Georgia Bold" size="12.0" /></font></Label>

                    <ComboBox fx:id="filtroLibriCombo" prefHeight="35.0" prefWidth="150.0" promptText="Seleziona..." style="-fx-background-color: #fcf6e7; -fx-border-color: #8d6e63; -fx-border-radius: 5;" />

                    <TextField fx:id="searchLibriField" prefHeight="35.0" promptText="Digita qui..." style="-fx-background-radius: 5; -fx-border-color: #8d6e63; -fx-border-radius: 5; -fx-background-color: #fcf6e7;" HBox.hgrow="ALWAYS" />

                    <Button onAction="#handleCercaVisualizza" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #5d4037; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand; -fx-font-family: 'Georgia';" text="CERCA" />

                    <Button onAction="#handleModificaVisualizza" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #8d6e63; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand; -fx-font-family: 'Georgia';" text="MODIFICA" />

                    <Button onAction="#handleEliminaVisualizza" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #9c3427; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand; -fx-font-family: 'Georgia';" text="ELIMINA" />

                    <Button onAction="#handleResetLibri" prefHeight="35.0" style="-fx-background-color: transparent; -fx-text-fill: #a1887f; -fx-cursor: hand;" text="Reset" underline="true" />
                </HBox>

                <TableView fx:id="tableLibriVisualizza" style="-fx-background-color: #fcf6e7; -fx-border-color: #8d6e63; -fx-border-width: 1; -fx-background-radius: 5;" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="titoloColumnVisualizza" prefWidth="250.0" sortable="true" text="Titolo" />
                        <TableColumn fx:id="autoreColumnVisualizza" prefWidth="200.0" sortable="true" text="Autore" />
                        <TableColumn fx:id="dataPubblicazioneColumnVisualizza" prefWidth="80.0" sortable="true" text="Anno" />
                        <TableColumn fx:id="isbnColumnVisualizza" prefWidth="150.0" sortable="true" text="ISBN" />
                        <TableColumn fx:id="copieColumnVisualizza" prefWidth="100.0" sortable="true" text="Copie Disp." />
                    </columns>
                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</StackPane>