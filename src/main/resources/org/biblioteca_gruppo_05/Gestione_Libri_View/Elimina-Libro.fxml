<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.geometry.Insets?>
        <?import javafx.scene.control.Button?>
        <?import javafx.scene.control.Label?>
        <?import javafx.scene.control.Separator?>
        <?import javafx.scene.control.TableColumn?>
        <?import javafx.scene.control.TableView?>
        <?import javafx.scene.control.TextField?>
        <?import javafx.scene.effect.DropShadow?>
        <?import javafx.scene.layout.HBox?>
        <?import javafx.scene.layout.StackPane?>
        <?import javafx.scene.layout.VBox?>
        <?import javafx.scene.text.Font?>

<StackPane prefHeight="650.0" prefWidth="800.0" style="-fx-background-color: #2b1b17;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.biblioteca_gruppo_05.Gestione_Libri.LibriController">

    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: transparent;">

            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
            </padding>

            <children>
                <VBox spacing="5.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#handleIndietro" prefHeight="45.0" prefWidth="45.0" style="-fx-background-color: #8d6e63; -fx-text-fill: #fff8e1; -fx-background-radius: 50; -fx-min-width: 45px; -fx-min-height: 45px; -fx-cursor: hand; -fx-font-family: 'Georgia';" text="â†">
                                    <font>
                                        <Font name="System Bold" size="20.0" />
                                    </font>
                                    <effect>
                                        <DropShadow color="#00000080" height="10.0" radius="4.5" width="10.0" />
                                    </effect>
                                </Button>
                                <VBox>
                                    <Label text="ELIMINA LIBRO" textFill="#9c3427">
                                        <font>
                                            <Font name="Georgia Bold" size="32.0" />
                                        </font>
                                        <effect>
                                            <DropShadow color="#000000" height="5.0" radius="2.0" width="5.0" />
                                        </effect>
                                    </Label>
                                    <Label text="Rimuovi definitivamente un volume dall'archivio" textFill="#a1887f" />
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <Separator opacity="0.5" prefWidth="200.0" style="-fx-background-color: #8d6e63;" />

                <VBox spacing="10.0" style="-fx-background-color: #fff8e1; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2); -fx-border-color: #8d6e63; -fx-border-width: 1; -fx-border-radius: 10;">
                    <Label text="Inserisci ISBN del libro da eliminare" textFill="#3e2723">
                        <font>
                            <Font name="Georgia Bold" size="14.0" />
                        </font>
                    </Label>
                    <HBox spacing="10.0">
                        <TextField fx:id="searchIsbnField" prefHeight="35.0" prefWidth="300.0" promptText="Es. 978-88..." style="-fx-background-radius: 5; -fx-border-color: #8d6e63; -fx-border-radius: 5; -fx-background-color: #fcf6e7;" />
                        <Button onAction="#handleCercaLibro" prefHeight="35.0" prefWidth="158.0" style="-fx-background-color: #5d4037; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 5; -fx-font-family: 'Georgia';" text="MOSTRA RIEPILOGO">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                    </HBox>
                </VBox>

                <VBox fx:id="previewContainer" managed="false" spacing="15.0" style="-fx-background-color: #fff8e1; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2); -fx-border-color: #9c3427; -fx-border-width: 0 0 0 5; -fx-border-radius: 10;" visible="false">

                    <Separator style="-fx-background-color: #8d6e63;" />

                    <VBox fx:id="tableViewContainer" managed="false" spacing="10.0" visible="false">
                        <children>
                            <Label text="E' questo il libro che vuoi eliminare?" textFill="#9c3427">
                                <font>
                                    <Font name="Georgia Bold" size="14.0" />
                                </font>
                            </Label>
                            <TableView fx:id="tableLibri" editable="true" prefHeight="100.0" prefWidth="520.0" style="-fx-background-color: #fcf6e7; -fx-border-color: #8d6e63; -fx-border-width: 1;">
                                <columns>
                                    <TableColumn fx:id="titoloColumn" prefWidth="120.0" text="Titolo" />
                                    <TableColumn fx:id="autoreColumn" prefWidth="120.0" text="Autore" />
                                    <TableColumn fx:id="isbnColumn" prefWidth="120.0" text="ISBN" />
                                    <TableColumn fx:id="dataPubblicazioneColumn" prefWidth="100.0" text="Data Pubbl." />
                                    <TableColumn fx:id="copieColumn" prefWidth="80.0" text="Copie" />
                                </columns>
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                </columnResizePolicy>
                            </TableView>
                            <HBox alignment="CENTER_RIGHT" spacing="15.0">
                                <children>
                                    <Button mnemonicParsing="false" onAction="#handleConfermaElimina" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #9c3427; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 5, 0, 0, 3); -fx-font-family: 'Georgia';" text="ELIMINA">
                                        <font>
                                            <Font name="System Bold" size="14.0" />
                                        </font>
                                    </Button>
                                </children>
                                <VBox.margin>
                                    <Insets top="10.0" />
                                </VBox.margin>
                            </HBox>
                        </children>
                    </VBox>
                </VBox>
            </children>
        </VBox>
    </children>
</StackPane>