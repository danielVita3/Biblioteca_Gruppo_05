<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="900.0" spacing="20.0" style="-fx-background-color: #f4f6f8;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.biblioteca_gruppo_05.Gestione_Profili.ProfiliController">

    <padding><Insets bottom="30.0" left="40.0" right="40.0" top="30.0" /></padding>

    <children>
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <Button onAction="#handleIndietro" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: white; -fx-background-radius: 50; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 3, 0, 0, 2);" text="â†" />
            <VBox>
                <Label text="LISTA UTENTI" textFill="#2c3e50"><font><Font name="Segoe UI Semibold" size="32.0" /></font></Label>
                <Label text="Gestione anagrafica degli iscritti" textFill="#7f8c8d" />
            </VBox>
        </HBox>
        <Separator prefWidth="200.0" />

        <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2);">
            <Label text="Filtra per:" textFill="#7f8c8d"><font><Font name="System Bold" size="12.0" /></font></Label>

            <ComboBox fx:id="filtroUtentiCombo" prefHeight="35.0" prefWidth="150.0" promptText="Seleziona..." style="-fx-background-color: #f9f9f9; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />

            <TextField fx:id="searchUtentiField" promptText="Cerca nome o matricola..." HBox.hgrow="ALWAYS" prefHeight="35.0" style="-fx-background-radius: 5; -fx-border-color: #bdc3c7;" />

            <Button onAction="#handleCercaUtente" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="CERCA" />
            <Button onAction="#handleResetUtenti" prefHeight="35.0" style="-fx-background-color: transparent; -fx-text-fill: #95a5a6;" text="Reset" underline="true" />
        </HBox>

        <TableView fx:id="tableUtenti" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2);">
            <columns>
                <TableColumn text="Matricola" sortable="true"  prefWidth="100.0" />
                <TableColumn text="Nome" sortable="true" prefWidth="150.0" />
                <TableColumn text="Cognome" sortable="true" prefWidth="150.0" />
                <TableColumn text="Email" sortable="true" prefWidth="200.0" />
            </columns>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
        </TableView>
    </children>
</VBox>