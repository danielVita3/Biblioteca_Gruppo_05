<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #2b1b17;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.biblioteca_gruppo_05.Gestione_Profili.ProfiliController">

    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: transparent;">

            <padding><Insets bottom="30.0" left="40.0" right="40.0" top="30.0" /></padding>

            <children>
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <Button onAction="#handleIndietro" style="-fx-background-color: #8d6e63; -fx-text-fill: #fff8e1; -fx-background-radius: 50; -fx-min-width: 45px; -fx-min-height: 45px; -fx-cursor: hand; -fx-font-family: 'Georgia';" text="â†">
                        <font>
                            <Font name="System Bold" size="20.0" />
                        </font>
                    </Button>
                    <VBox>
                        <Label text="ELIMINA PROFILO" textFill="#9c3427">
                            <font>
                                <Font name="Georgia Bold" size="32.0" />
                            </font>
                        </Label>
                        <Label text="Rimuovi un utente dal sistema" textFill="#a1887f" />
                    </VBox>
                </HBox>
                <Separator prefWidth="200.0" style="-fx-background-color: #8d6e63;" />

                <VBox spacing="10.0" style="-fx-background-color: #fff8e1; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2); -fx-border-color: #8d6e63; -fx-border-width: 1; -fx-border-radius: 10;">
                    <Label text="Inserisci Matricola da eliminare" textFill="#3e2723"><font><Font name="Georgia Bold" size="14.0" /></font></Label>
                    <HBox spacing="10.0">
                        <TextField fx:id="searchMatricolaField" prefHeight="35.0" prefWidth="300.0" promptText="Matricola..." style="-fx-background-radius: 5; -fx-border-color: #8d6e63; -fx-background-color: #fcf6e7;" />

                        <Button onAction="#handleCercaUtente" prefHeight="35.0" prefWidth="167.0" style="-fx-background-color: #5d4037; -fx-text-fill: #fff8e1; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" text="MOSTRA RIEPILOGO">
                            <font>
                                <Font name="Georgia Bold" size="12.0" />
                            </font>
                        </Button>
                    </HBox>
                </VBox>

                <VBox fx:id="tableViewContainer" managed="false" spacing="15.0" style="-fx-background-color: #fff8e1; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2); -fx-border-color: #9c3427; -fx-border-width: 0 0 0 5; -fx-border-radius: 10;">
                    <Label text="Sei sicuro di voler eliminare questo utente?" textFill="#9c3427"><font><Font name="Georgia Bold" size="16.0" /></font></Label>

                    <TableView fx:id="tableProfili" prefHeight="150.0" prefWidth="700.0" style="-fx-background-color: #fcf6e7; -fx-border-color: #8d6e63;">
                        <columns>
                            <TableColumn fx:id="colonnaMatricolaP" prefWidth="100.0" text="Matricola" />
                            <TableColumn fx:id="colonnaNomeP" prefWidth="150.0" text="Nome" />
                            <TableColumn fx:id="colonnaCognomeP" prefWidth="150.0" text="Cognome" />
                            <TableColumn fx:id="colonnaEmailP" prefWidth="200.0" text="Email" />
                            <TableColumn fx:id="colonnaCopieP" prefWidth="100.0" text="N. Copie" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>

                    <HBox alignment="CENTER_RIGHT" spacing="20.0">
                        <Button onAction="#handleConfermaElimina" prefHeight="40.0" style="-fx-background-color: #9c3427; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(156, 52, 39, 0.4), 5, 0, 0, 3); -fx-cursor: hand;" text="ELIMINA UTENTE">
                            <font>
                                <Font name="Georgia Bold" size="14.0" />
                            </font>
                        </Button>
                    </HBox>
                </VBox>
            </children>
        </VBox>
    </children>
</StackPane>
