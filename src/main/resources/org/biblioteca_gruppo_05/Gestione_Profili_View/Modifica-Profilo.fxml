<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.geometry.Insets?>
        <?import javafx.scene.control.Button?>
        <?import javafx.scene.control.Label?>
        <?import javafx.scene.control.Separator?>
        <?import javafx.scene.control.TableColumn?>
        <?import javafx.scene.control.TableView?>
        <?import javafx.scene.control.TextField?>
        <?import javafx.scene.effect.DropShadow?>
        <?import javafx.scene.layout.HBox?>
        <?import javafx.scene.layout.StackPane?>
        <?import javafx.scene.layout.VBox?>
        <?import javafx.scene.text.Font?>

<StackPane prefHeight="700.0" prefWidth="800.0" style="-fx-background-color: #2b1b17;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.biblioteca_gruppo_05.Gestione_Profili.ProfiliController">

    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: transparent;">

            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
            </padding>

            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0" spacing="15.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleIndietro" prefHeight="45.0" prefWidth="45.0" style="-fx-background-color: #8d6e63; -fx-text-fill: #fff8e1; -fx-background-radius: 50; -fx-min-width: 45px; -fx-min-height: 45px; -fx-cursor: hand; -fx-font-family: 'Georgia';" text="â†">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                            <effect>
                                <DropShadow color="#00000080" height="10.0" radius="4.5" width="10.0" />
                            </effect>
                        </Button>
                        <Label text="Modifica Profilo" textFill="#fff8e1">
                            <font>
                                <Font name="Georgia Bold" size="32.0" />
                            </font>
                            <effect>
                                <DropShadow color="#000000" height="5.0" radius="2.0" width="5.0" />
                            </effect>
                        </Label>
                    </children>
                </HBox>
                <Label text="Cerca un utente per visualizzare e modificare i dati" textFill="#a1887f">
                    <font>
                        <Font name="Georgia" size="14.0" />
                    </font>
                </Label>

                <Separator prefWidth="200.0" style="-fx-background-color: #8d6e63;" />

                <VBox fx:id="searchContainer" alignment="CENTER" spacing="15.0" style="-fx-background-color: #fff8e1; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5); -fx-border-color: #8d6e63; -fx-border-width: 1; -fx-border-radius: 10;">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <Label text="Inserisci Matricola Utente" textFill="#3e2723">
                            <font>
                                <Font name="Georgia Bold" size="14.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <TextField fx:id="searchMatricolaField" prefHeight="35.0" prefWidth="250.0" promptText="Es. 00123" style="-fx-background-radius: 5; -fx-border-color: #8d6e63; -fx-border-radius: 5; -fx-background-color: #fcf6e7;" />

                                <Button fx:id="btnCerca" mnemonicParsing="false" onAction="#handleCercaUtente" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #5d4037; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" text="CERCA">
                                    <font>
                                        <Font name="Georgia Bold" size="12.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                        <Label fx:id="errorLabel" style="-fx-text-fill: #9c3427;" />
                    </children>
                </VBox>

                <Separator prefWidth="200.0" style="-fx-background-color: #8d6e63;" />

                <VBox fx:id="tableViewContainer" managed="false" spacing="10.0" style="-fx-background-color: #fff8e1; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5); -fx-border-color: #8d6e63; -fx-border-width: 1; -fx-border-radius: 10;" visible="false">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <Label text="Risultato Trovato (Clicca per Modificare)" textFill="#3e2723">
                            <font>
                                <Font name="Georgia Bold" size="14.0" />
                            </font>
                        </Label>

                        <TableView fx:id="tableProfili" prefHeight="150.0" prefWidth="700.0" style="-fx-background-color: #fcf6e7; -fx-border-color: #8d6e63;">
                            <columns>
                                <TableColumn fx:id="colonnaMatricolaP" prefWidth="100.0" text="Matricola" />
                                <TableColumn fx:id="colonnaNomeP" prefWidth="150.0" text="Nome" />
                                <TableColumn fx:id="colonnaCognomeP" prefWidth="150.0" text="Cognome" />
                                <TableColumn fx:id="colonnaEmailP" prefWidth="200.0" text="Email" />
                                <TableColumn fx:id="colonnaCopieP" prefWidth="100.0" text="N. Prestiti attivi" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>

                        <HBox alignment="CENTER_RIGHT" spacing="15.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#handleSalvaModifiche" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #8d6e63; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 5, 0, 0, 3);" text="SALVA MODIFICHE">
                                    <font>
                                        <Font name="Georgia Bold" size="14.0" />
                                    </font>
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</StackPane>