<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #f4f6f8;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.biblioteca_gruppo_05.Gestione_Profili.ProfiliController">

    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
    </padding>

    <children>
        <!-- INTESTAZIONE -->
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleIndietro" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: white; -fx-background-radius: 50; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 3, 0, 0, 2);" text="â†" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Button>
                <Label text="   Modifica Profilo" textFill="#2c69cb">
                    <font>
                        <Font name="Segoe UI Bold" size="32.0" />
                    </font>
                </Label>
            </children>
        </HBox>
        <Label text="Cerca un utente per visualizzare e modificare i dati" textFill="#7f8c8d">
            <font>
                <Font size="14.0" />
            </font>
        </Label>

        <Separator prefWidth="200.0" />

        <!-- SEZIONE RICERCA (Style Card) -->
        <VBox fx:id="searchContainer" alignment="CENTER" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label text="Inserisci Matricola Utente" textFill="#34495e">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <!-- Campo ricerca Matricola -->
                        <TextField fx:id="searchMatricolaField" prefHeight="35.0" prefWidth="250.0" promptText="Es. 00123" style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />

                        <!-- Bottone Cerca -->
                        <Button fx:id="btnCerca" mnemonicParsing="false" onAction="#handleCercaUtente" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" text="CERCA">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
                <Label fx:id="errorLabel" style="-fx-text-fill: red;" />
            </children>
        </VBox>

        <Separator prefWidth="200.0" />

        <!-- SEZIONE RISULTATI / TABELLA (Nascosta inizialmente) -->
        <VBox fx:id="tableViewContainer" managed="false" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);" visible="false">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label text="Risultato Trovato" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>

                <!-- Tabella Profili -->
                <TableView fx:id="tableProfili" prefHeight="150.0" prefWidth="700.0">
                    <columns>
                        <TableColumn fx:id="colonnaMatricolaP" prefWidth="100.0" text="Matricola" />
                        <TableColumn fx:id="colonnaNomeP" prefWidth="150.0" text="Nome" />
                        <TableColumn fx:id="colonnaCognomeP" prefWidth="150.0" text="Cognome" />
                        <TableColumn fx:id="colonnaEmailP" prefWidth="200.0" text="Email" />
                        <TableColumn fx:id="colonnaCopieP" prefWidth="100.0" text="N. Copie" />
                    </columns>
                </TableView>

                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <children>
                        <!-- Bottone Salva -->
                        <Button mnemonicParsing="false" onAction="#handleSalvaModifiche" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(231,76,60,0.3), 5, 0, 0, 3);" text="SALVA MODIFICHE">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>