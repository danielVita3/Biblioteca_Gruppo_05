<VBox alignment="TOP_CENTER" prefHeight="546.0" prefWidth="611.0" spacing="20.0" style="-fx-background-color: #f4f6f8;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.biblioteca_gruppo_05.ProfiliController">

    <padding><Insets bottom="30.0" left="40.0" right="40.0" top="30.0" /></padding>

    <children>
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <Button onAction="#handleIndietro" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: white; -fx-background-radius: 50; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 3, 0, 0, 2);" text="â†" />
            <VBox>
                <Label text="AGGIUNGI PROFILO" textFill="#2c3e50"><font><Font name="Segoe UI Semibold" size="32.0" /></font></Label>
                <Label text="Registra un nuovo utente nel sistema" textFill="#7f8c8d" />
            </VBox>
        </HBox>
        <Separator prefWidth="200.0" />

        <VBox spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5); -fx-padding: 30;">
            <Label text="Dati Personali" textFill="#34495e"><font><Font name="System Bold" size="18.0" /></font></Label>

            <GridPane hgap="20.0" vgap="20.0">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="100.0" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints /><RowConstraints /><RowConstraints /><RowConstraints />
                </rowConstraints>

                <Label text="Nome:" textFill="#7f8c8d" />
                <TextField fx:id="nomeField" promptText="Es. Mario" style="-fx-border-color: #bdc3c7; -fx-background-radius: 5; -fx-border-radius: 5;" GridPane.columnIndex="1" />

                <Label text="Cognome:" textFill="#7f8c8d" GridPane.rowIndex="1" />
                <TextField fx:id="cognomeField" promptText="Es. Rossi" style="-fx-border-color: #bdc3c7; -fx-background-radius: 5; -fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Matricola:" textFill="#7f8c8d" GridPane.rowIndex="2" />
                <TextField fx:id="matricolaField" promptText="Numero identificativo univoco" style="-fx-border-color: #bdc3c7; -fx-background-radius: 5; -fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Email Istituzionale:" textFill="#7f8c8d" GridPane.rowIndex="3" />
                <TextField fx:id="emailField" promptText="nome.cognome@istituto.it" style="-fx-border-color: #bdc3c7; -fx-background-radius: 5; -fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </GridPane>

            <Separator />

            <HBox alignment="CENTER_RIGHT" spacing="15.0">
                <Button onAction="#handlePulisci" style="-fx-background-color: transparent;" text="Pulisci campi" textFill="#95a5a6" underline="true" />
                <Button onAction="#handleSalvaProfilo" prefHeight="40.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(39,174,96,0.3), 5, 0, 0, 3);" text="REGISTRA UTENTE" />
            </HBox>
        </VBox>
    </children>
</VBox>
